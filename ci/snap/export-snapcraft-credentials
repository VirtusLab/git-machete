
if [[ "$OSTYPE" == "darwin"* ]]; then
  wrap0_flag=""
else
  wrap0_flag="--wrap=0"
fi

snapcraft export-login ~/.snapcraft.login

echo ".snapcraft.login file: \n"
cat ~/.snapcraft.login
echo ".snapcraft.login file encoded with base64: \n"
echo $(base64 $wrap0_flag ~/.snapcraft.login)
echo "\nThis value is used in as CircleCI's secret as environment variable SNAPCRAFT_LOGIN_CREDENTIALS_CONTENTS_BASE64."
