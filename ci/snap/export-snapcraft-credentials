
if [[ "$OSTYPE" == "darwin"* ]]; then
  wrap0_flag=""
else
  wrap0_flag="--wrap=0"
fi

snapcraft export-login ~/.snapcraft.login

echo .snapcraft.login file
cat ~/.snapcraft.login
echo .snapcraft.login file encoded with base64 below. This value is used in as CircleCI's secret
 as environment variable SNAPCRAFT_LOGIN_CREDENTIALS_CONTENTS_BASE64.
echo $(base64 $wrap0_flag ~/.snapcraft.login)
